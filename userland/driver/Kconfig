menu "Driver"

config ATA
    bool "ATA disk"
    depends on $ZOS_ARCH = "i386"
    default y

config EXT2
    bool "Ext2 filesystem"
    default y

config KBD
    bool "Keyboard driver"
    default y

config VIDEO
    bool "Video driver"
    default y

config TTY
    bool "TTY Driver"
    depends on KBD && VIDEO
    default y

endmenu
